<header class="container">
    <div class="inner">
        <div class="header-logo">
            {{#if @blog.logo}}
                <img src="{{@blog.logo}}" alt="{{@blog.title}}" />
            {{else}}
                <span>{{@blog.title}}</span>
            {{/if}}
        </div>
        <div class="header-nav">
            {{navigation}}
        </div>
    </div>
</header>